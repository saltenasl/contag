{
  "name": "@contag/frontend",
  "sideEffects": [
    "./src/auth/**/*",
    "*.css"
  ],
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm generate-graphql-types && NODE_ENV=production webpack",
    "bundle-report": "webpack-bundle-analyzer --port 4200 dist/stats.json",
    "dev": "NODE_ENV=development webpack-dev-server",
    "lint:base": "eslint",
    "lint": "pnpm run lint:base . --ext .ts,.tsx,.js",
    "generate-graphql-types": "graphql-codegen",
    "prettier": "bash -c 'prettier --check --ignore-unknown --ignore-path=<(cat ../.prettierignore) \"**/*\"'",
    "sourcemap-upload": "DATADOG_SITE=us5.datadoghq.com DATADOG_API_HOST=api.us5.datadoghq.com datadog-ci sourcemaps upload ./dist --service=contag --release-version=$(jq -r .version ../package.json) --project-path=./src/ --minified-path-prefix=https://contagapp.com/dist --repository-url=https://github.com/foo/bar/",
    "test": "DEBUG_PRINT_LIMIT=100000 NODE_OPTIONS=--max_old_space_size=4096 jest --watchAll=false --maxWorkers=50% --no-watchman",
    "test:watch": "DEBUG_PRINT_LIMIT=100000 NODE_OPTIONS=--max_old_space_size=4096 jest --maxWorkers=25%",
    "pretypecheck": "nx generate-graphql-types",
    "typecheck": "tsc --noEmit --pretty"
  },
  "dependencies": {
    "@apollo/client": "^3.7.10",
    "@contag/ui": "workspace:*",
    "@datadog/browser-logs": "^4.35.0",
    "@datadog/browser-rum": "^4.35.0",
    "@tiptap/core": "2.0.0-beta.220",
    "@tiptap/pm": "2.0.0-beta.220",
    "@tiptap/react": "2.0.0-beta.220",
    "@tiptap/starter-kit": "2.0.0-beta.220",
    "@types/jest": "^29.4.0",
    "firebase": "^9.17.2",
    "graphql": "^16.6.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0",
    "use-debounce": "^9.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@contag/eslint-config": "workspace:*",
    "@contag/graphql-api": "workspace:*",
    "@contag/tsconfig": "workspace:*",
    "@faker-js/faker": "^7.6.0",
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/client-preset": "^2.1.1",
    "@graphql-typed-document-node/core": "^3.1.2",
    "@mui/icons-material": "^5.11.11",
    "@mui/material": "^5.11.12",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@swc/core": "^1.3.39",
    "@swc/jest": "^0.2.24",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/deep-equal": "^1.0.1",
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.28",
    "@types/react-beautiful-dnd": "^13.1.3",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/webpack": "^5.28.0",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-fetch": "^3.1.5",
    "css-loader": "^6.7.3",
    "dayjs": "^1.11.7",
    "deep-equal": "^2.2.0",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.36.0",
    "factory.ts": "^1.3.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.2.0",
    "msw": "^1.1.0",
    "prettier": "^2.8.4",
    "react-refresh": "^0.14.0",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.2.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^4.9.5",
    "webpack": "^5.76.1",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "workbox-webpack-plugin": "^6.5.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{ts,tsx}": [
      "pnpm run lint:base"
    ]
  }
}
